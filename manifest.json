{
    "manifest_version": 2,
    "name": "Budgeter",
    "version": "0.1.4",
    "author": "Evan Perret-Timms",
    "description": "Chrome extension to track and display your online shopping",
    "permissions": ["storage"],
    "content_scripts":[
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action":{
        "default_icon": "/icons/test.png",
        "default_popup":"popup.html",
        "default_title":"Welcome to Budgeter"
    }

}