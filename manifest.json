{
    "manifest_version": 2,
    "name": "Budgie",
    "version": "0.3.2",
    "author": "Evan Perret-Timms",
    "description": "Chrome extension to track and display your online shopping",
    "permissions": ["storage", "activeTab"],
    "content_scripts":[
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action":{
        "default_icon": "/icons/test.png",
        "default_popup":"/views/main.html",
        "default_title":"Budgie"
    }

}